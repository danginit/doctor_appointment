<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3" style="text-align: center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= link_to 'Show', patient_path(patient), class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', patients_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == 'patient' %>
  <%= link_to 'New Patient', new_patient_path %>
<% end %>


